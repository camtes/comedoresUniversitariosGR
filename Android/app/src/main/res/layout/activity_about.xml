<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:background="@color/colorPrimary"
    android:paddingRight="16dp"
    tools:context="ccamposfuentes.es.comedores_universitarios_gr.AboutActivity"
    >

    <TextView
        android:id="@+id/tv_about_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="Comedores universitarios Granada"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="21sp"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.2"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/white"
        android:layout_below="@id/tv_about_title"
        />

    <TextView
        android:id="@+id/tv_about_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:alpha="0.8"
        android:textColor="@android:color/white"
        android:layout_below="@id/tv_about_title"
        android:text="Aplicación que saca de scu.ugr.es el menú semanal de los comedores universitarios de Granada."/>

    <TextView
        android:id="@+id/tv_about_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_about_desc"
        android:textColor="@android:color/white"
        android:layout_marginTop="50dp"
        android:textAllCaps="true"
        android:textSize="21sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        android:text="Autor"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.2"
        android:background="@android:color/white"
        android:layout_below="@id/tv_about_author"
        />

    <TextView
        android:id="@+id/tv_about_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:alpha="0.8"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="Carlos Campos"
        android:textColor="@android:color/white"
        android:layout_below="@id/tv_about_author"/>

    <TextView
        android:id="@+id/tv_about_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:linksClickable="true"
        android:alpha="0.8"
        android:autoLink="email"
        android:textColorLink="@color/link"
        android:textColor="@android:color/white"
        android:text="carlos@ccamposfuentes.es"
        android:paddingBottom="8dp"
        android:layout_below="@id/tv_about_name"/>

    <TextView
        android:id="@+id/tv_about_web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:textColor="@android:color/white"
        android:paddingBottom="8dp"
        android:linksClickable="true"
        android:textColorLink="@color/link"
        android:autoLink="web"
        android:text="http://www.ccamposfuentes.es"
        android:layout_below="@id/tv_about_email"/>

    <TextView
        android:id="@+id/tv_about_mas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_below="@id/tv_about_web"
        android:textColorLink="@color/link"
        android:linksClickable="true"
        android:alpha="0.8"
        android:autoLink="web"
        android:text="https://play.google.com/store/apps/developer?id=ccamposfuentes"/>


</RelativeLayout>