<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardElevation="1dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        card_view:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_favorite"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:tint="@color/white"
                android:layout_marginTop="16dp"
                android:scaleType="centerInside"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_star_black_24dp"
                android:textAlignment="center"
                android:gravity="center"
                android:visibility="invisible"
                android:elevation="2dp"
                />

            <LinearLayout
                android:id="@+id/ll_fecha"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_fecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="14sp"
                    android:text="LUNES 14 DICIEMBRE"/>

            </LinearLayout>

           <LinearLayout
               android:id="@+id/ll_platos"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center_vertical"
               android:layout_toRightOf="@id/ll_fecha"
               android:padding="16dp"
               android:orientation="vertical">

               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent">

                   <TextView
                       android:id="@+id/tv_plato1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginRight="25dp"
                       android:text="1er plato"/>

                   <ImageButton
                       android:id="@+id/ib_plato1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentRight="true"
                       android:tint="@color/gold"
                       android:background="@android:color/transparent"
                       android:src="@drawable/ic_star_border_black_24dp"/>

               </RelativeLayout>


               <View
                   android:id="@+id/separatorp1"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginRight="10dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dp"
                   android:background="@android:color/black"
                   android:alpha="0.2" />

               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <TextView
                       android:id="@+id/tv_plato2"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginRight="25dp"
                       android:text="2o plato"/>

                   <ImageButton
                       android:id="@+id/ib_plato2"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:paddingLeft="16dp"
                       android:layout_centerVertical="true"
                       android:layout_alignParentRight="true"
                       android:tint="@color/gold"
                       android:background="@android:color/transparent"
                       android:src="@drawable/ic_star_border_black_24dp"/>

               </RelativeLayout>

               <View
                   android:id="@+id/separatorp2"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginRight="10dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dp"
                   android:background="@android:color/black"
                   android:alpha="0.2" />

               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <TextView
                       android:id="@+id/tv_plato3"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginRight="25dp"
                       android:text="3er plato"/>

                   <ImageButton
                       android:id="@+id/ib_plato3"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:paddingLeft="16dp"
                       android:layout_centerVertical="true"
                       android:layout_alignParentRight="true"
                       android:alpha="0.3"
                       android:visibility="gone"
                       android:tint="@color/colorPrimaryDark"
                       android:background="@android:color/transparent"
                       android:src="@drawable/ic_notifications_none_black_24dp"/>

               </RelativeLayout>

               <View
                   android:id="@+id/separatorp3"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginRight="10dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dp"
                   android:background="@android:color/black"
                   android:visibility="gone"
                   android:alpha="0.2" />

               <TextView
                   android:id="@+id/tv_plato4"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:visibility="gone"
                   android:text="4o plato"/>


           </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>